section.products
    .container  
        .products__content
            h2.products__title.visually-hidden Товары
            .tabs.products__tabs
                .tabs__buttons
                    button.tabs__button(data-target="#prodtab1") Хиты продаж
                    button.tabs__button(data-target="#prodtab2") Самые популярные
                    button.tabs__button(data-target="#prodtab3") Новые поступления
                    button.tabs__button(data-target="#prodtab4") Акционные товары
                .tabs__content#prodtab1
                    .products__grid
                        each product in products
                                a.product-card(href="#")
                                    .product-card__wrapper
                                        .product-card-slider
                                            .product-card-slider__wrapper
                                                each slide in product.images
                                                    .product-card-slider__slide
                                                        img(src=slide.src alt=slide.alt)
                                            .product-card-slider__pagination
                                            .product-card-slider__navigation
                                                .product-card-slider__navigation-prev
                                                .product-card-slider__navigation-next

                                        .product-card__content
                                            .product-card__name= product.name
                                            .product-card__price= product.price

