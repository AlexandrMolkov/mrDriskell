extends pug/common/main

block variables
    -var title = '404'
    -var headerClasses = ''
    -var currentPage = ''

block content
    main.main 
        .container
            .not-found
                .not-found__content
                    .not-found__title Ошибка 404!
                    .not-found__text Эта страница не найдена, мы уже работаем, чтобы ее восстановить!
                    .not-found__links
                        a(href="index.html").btn.btn_orange Вернуться на главную
                        a(href="catalog.html").not-found__link Вернуться в каталог
                            span.dec-line.dec-line__button.dec-line_square.dec-line_square-small
    include pug/common/footer
    script(src="js/app.min.js")
       

        